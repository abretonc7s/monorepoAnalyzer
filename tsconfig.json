{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "rollup.config.mjs", ".size-limit.js", "src/tools/optimization/cli.ts", "*.mjs", "rollup.config.ts"],
  "exclude": ["node_modules"]
}
